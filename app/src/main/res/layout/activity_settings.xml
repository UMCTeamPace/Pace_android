<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".ui.settings.SettingsActivity"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/settings_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="21dp"
            android:src="@drawable/ic_arrow_opened"/>
        <TextView
            android:id="@+id/settings_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            android:textAppearance="@style/TextAppearance.App.Num.BodyMd.Medium"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/settings_calendar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캘린더"
        android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Medium"
        android:layout_marginTop="29dp"
        android:layout_marginStart="23dp"
        app:layout_constraintTop_toBottomOf="@id/settings_toolbar"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/settings_calendar_ll"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/box_single_settings"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/settings_calendar_tv"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/settings_calendar_list_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="캘린더 목록"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Regular"
            android:layout_marginStart="19dp"/>
        <ImageView
            android:id="@+id/settings_calendar_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_arrow_closed"
            android:layout_marginEnd="21dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/settings_alarm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알람"
        android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Medium"
        android:layout_marginTop="25dp"
        android:layout_marginStart="23dp"
        app:layout_constraintTop_toBottomOf="@id/settings_calendar_ll"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/settings_alarm_ll"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/box_multiple_settings"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/settings_alarm_tv"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/settings_reminder_alarm_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="리마인드 알림"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Regular"
                android:layout_marginStart="19dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="없음"
                android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Regular"
                android:layout_marginEnd="3dp"/>
            <ImageView
                android:id="@+id/settings_reminder_alarm_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_arrow_closed"
                android:layout_marginEnd="21dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="8dp"
            android:background="#DCDCDC"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/settings_departure_alarm_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="출발 알림"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Regular"
                android:layout_marginStart="19dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 지정"
                android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Regular"
                android:layout_marginEnd="3dp"/>
            <ImageView
                android:id="@+id/settings_departure_alarm_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_arrow_closed"
                android:layout_marginEnd="21dp" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/settings_permission_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="권한"
        android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Medium"
        android:layout_marginTop="25dp"
        android:layout_marginStart="23dp"
        app:layout_constraintTop_toBottomOf="@id/settings_alarm_ll"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/settings_permission_ll"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/box_multiple_settings"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/settings_permission_tv"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/settings_alarm_permission_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="알림 권한"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Regular"
                android:layout_marginStart="19dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_arrow_closed"
                android:layout_marginEnd="21dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="8dp"
            android:background="#DCDCDC"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/settings_location_permission_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="위치 권한"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Regular"
                android:layout_marginStart="19dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_arrow_closed"
                android:layout_marginEnd="21dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/settings_others_ll"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/box_multiple_settings"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/settings_permission_tv"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/settings_review_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_review"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰 남기기"
                android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Regular"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="8dp"
            android:background="#DCDCDC"/>
        <LinearLayout
            android:id="@+id/settings_logout_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/ic_logout"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Regular"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="8dp"
            android:background="#DCDCDC"/>
        <LinearLayout
            android:id="@+id/settings_signout_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="17dp"
                android:src="@drawable/ic_signout"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="탈퇴하기"
                android:textAppearance="@style/TextAppearance.App.Num.CaptionLg.Regular"
                android:layout_marginStart="9dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>